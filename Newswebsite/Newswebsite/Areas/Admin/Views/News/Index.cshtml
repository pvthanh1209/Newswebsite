@using News.Base.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var lstCate = (List<Category>)ViewBag.ListCate;
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Danh sách tin tức</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách tin tức</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Danh sách tin tức</h4>
                <div class="flex-shrink-0">
                    <button type="button" id="btnCreate" class="btn btn-warning btn-sm"><i class="bx bx-plus"></i> Thêm</button>
                </div>
            </div>
            <div class="card-body">
                <div class="live-preview pb-3">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Tìm kiếm</label>
                            <input type="text" class="form-control" id="txtSearch" placeholder="Tên tên, emails,..." />
                        </div>
                        <div class="col-md-3">
                            <label>Thể loại bài viết</label>
                            <select class="form-select" id="sltCateSearch">
                                <option value="0">--Tất cả loại bài viết--</option>
                                @if(lstCate != null && lstCate.Count > 0)
                                {
                                    foreach(var item in lstCate)
                                    {
                                        <option value="@item.Id">@item.CateName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-primary" style="margin-top:28px;" id="btnSeach"><i class="bx bx-search"></i></button>
                        </div>
                    </div>
                </div>
                <table class="table table-centered align-middle" id="tblNews">
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div>

