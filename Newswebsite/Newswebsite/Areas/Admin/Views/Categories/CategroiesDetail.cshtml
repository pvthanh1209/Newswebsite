@model News.Base.Models.Category
@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<input type="hidden" value="@Model.Id" id="ipCateIdHidden" />
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Danh sách chi tiết danh mục @Model.CateName</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách chi tiết danh mục @Model.CateName</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Danh sách chi tiết danh mục @Model.CateName</h4>
                <div class="flex-shrink-0">
                    <button type="button" id="btnCreateDetail" class="btn btn-warning btn-sm"><i class="bx bx-plus"></i> Thêm</button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-centered align-middle" id="tblCategoryDetail">
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div>
<div id="modalsAddEditDetail" class="modal fade" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 overflow-hidden">
            <div class="modal-header p-3">
                <h4 class="card-title mb-0" id="titleModaldetail"></h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="frmCategoryDetail">
                    <input hidden name="Id" id="ipHiddenDetailId">
                    <input hidden name="CateId" id="ipCateIdHiddenModel" value="@Model.Id">
                    <div class="row">
                        <div class="mb-3 col-md-12">
                            <label class="form-label"> Tên danh mục</label>
                            <input type="text" class="form-control" name="Name" id="ipCateNameDetail" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label"> Tiêu đề</label>
                            <input type="text" class="form-control" name="Title" id="ipTitleDetail" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label"> Ảnh đại diện</label>
                            <input type="file" class="form-control" name="Thumb" id="ipFileUpload" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="btnSubmitDetail" type="button" class="btn btn-primary">Lưu</button>
                        <a href="javascript:void(0);" class="btn btn-link fw-medium" data-bs-dismiss="modal">Đóng</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
